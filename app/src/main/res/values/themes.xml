<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.M_2090_3" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="myColor">#FF0101</item>

        <item name="colorPrimary">?attr/myColor</item>
        <item name="colorOnSurface">?myColor</item>
        <item name="colorOnSecondaryContainer">?myColor</item>
        <item name="colorPrimaryContainer">?myColor</item>
        <item name="colorSurface">?myColor</item>
        <item name="colorOnSurfaceVariant">?myColor</item>
        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="textInputStyle">@style/MyTextInputLayoutStyle</item>

        <item name="textAppearanceBody2">@style/MyTextAppearanceBody2</item>
        <item name="textAppearanceLabelLarge">@style/MyTextAppearanceBody2</item>

        <!--   <item name="android:navigationBarColor">@android:color/transparent</item>
           <item name="android:statusBarColor">@android:color/transparent</item>
           <item name="android:windowLightStatusBar">?attr/isLightTheme</item>-->
    </style>

    <style name="MyTextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/aladin</item>
        <item name="android:fontFamily">@font/aladin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">54sp</item>
        <item name="android:letterSpacing">0.1178571429</item>
    </style>

    <style name="MyNewTheme" parent="Base.Theme.M_2090_3" />

    <style name="MyNewTheme.MyNewNewTheme" />

    <style name="MyNewNewNewTheme" parent="MyNewTheme.MyNewNewTheme" />

    <style name="MyRedTheme" parent="MyNewNewNewTheme">
        <item name="myColor">#FF0101</item>
    </style>

    <style name="MyGreenTheme" parent="MyNewNewNewTheme">
        <item name="myColor">#1EF41E</item>
    </style>

    <style name="MyBlueTheme" parent="MyNewNewNewTheme">
        <item name="myColor">#0D96FF</item>
    </style>

    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/my_selector_backgroundchip</item>
        <item name="rippleColor">#CF00F4</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">#CF00F4</item>
        <item name="counterTextColor">@drawable/my_selector_backgroundchip</item>
    </style>


</resources>